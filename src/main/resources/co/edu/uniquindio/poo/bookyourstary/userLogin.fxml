<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" prefWidth="320" spacing="15" styleClass="login-panel" stylesheets="@css/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookyourstay.viewControllers.UserLoginViewController">

    <Label styleClass="login-title" text="Inicio de Sesión" />

    <TextField fx:id="txt_emailField" promptText="Email" styleClass="login-field" />
    <PasswordField fx:id="txt_passwordField" promptText="Contraseña" styleClass="login-field" />

    <Button fx:id="btn_Ingresar" onAction="#handleLogin" styleClass="login-button" text="Ingresar" />

    <Hyperlink onAction="#handlePasswordRecovery" styleClass="login-link" text="¿Olvidó su contraseña?" />
    <Hyperlink onAction="#showRegister" styleClass="login-link" text="Crear nueva cuenta" />

</VBox>
