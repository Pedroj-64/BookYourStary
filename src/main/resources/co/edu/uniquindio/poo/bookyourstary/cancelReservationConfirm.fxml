<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="center" prefWidth="300">
    <Label text="¿Está seguro de cancelar esta reserva?" styleClass="warning-text"/>
    <HBox spacing="10" alignment="center">
        <Button text="Confirmar" onAction="#handleConfirmCancel" styleClass="danger-button"/>
        <Button text="Cancelar" onAction="#closeDialog"/>
    </HBox>
</VBox>