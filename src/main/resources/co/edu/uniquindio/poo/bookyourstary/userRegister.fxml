<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefWidth="400" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookyourstay.viewController.RegisterViewController">

    <Label styleClass="title" text="Registro de Usuario" GridPane.columnSpan="2" />

    <Label text="Cédula:" GridPane.rowIndex="1" />
    <TextField fx:id="cedulaField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Nombre" GridPane.rowIndex="2" />
    <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Teléfono:" GridPane.rowIndex="3" />
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Email:" GridPane.rowIndex="4" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Contraseña:" GridPane.rowIndex="5" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Button onAction="#handleRegister" text="Registrarse" GridPane.columnSpan="2" GridPane.rowIndex="6" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
