<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefHeight="400" prefWidth="450" styleClass="register-panel" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookyourstay.viewController.RegisterViewController">


    <Label styleClass="form-label" text="Cédula:" GridPane.rowIndex="1" />
    <TextField fx:id="txt_Cedula" prefHeight="29.0" prefWidth="179.0" styleClass="form-field" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />


    <Label styleClass="form-label" text="Nombre:" GridPane.rowIndex="2" />
    <TextField fx:id="txt_name" styleClass="form-field" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2" />


    <Label styleClass="form-label" text="Teléfono:" GridPane.rowIndex="3" />
    <TextField fx:id="txt_phone" styleClass="form-field" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />


    <Label styleClass="form-label" text="Email:" GridPane.rowIndex="4" />
    <TextField fx:id="txt_email" styleClass="form-field" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="4" />


    <Label styleClass="form-label" text="Contraseña:" GridPane.rowIndex="5" />
    <PasswordField fx:id="txt_password" styleClass="form-field" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="5" />


    <Label styleClass="form-label" text="Activación:" GridPane.rowIndex="6" />
    <TextField fx:id="txt_ActivationCode" styleClass="form-field" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="6" />


    <Button onAction="#handleRegister" styleClass="action-button" text="Registrarse" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="8">
        <GridPane.margin>
            <Insets />
        </GridPane.margin>
    </Button>


    <Label styleClass="register-title" text="Registro de Usuario" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.halignment="CENTER" />

    
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints maxWidth="156.0" minWidth="156.0" prefWidth="156.0" />
        <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
   <stylesheets>
      <URL value="@../css/register.css" />
      <URL value="@css/register.css" />
   </stylesheets>
</GridPane>
