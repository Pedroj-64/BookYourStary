<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bookyourstay.viewControllers.ManageRoomsViewController" spacing="10">

    <TableView fx:id="roomsTable">
        <columns>
            <TableColumn text="Número"/>
            <TableColumn text="Tipo"/>
            <TableColumn text="Capacidad"/>
            <TableColumn text="Precio"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Agregar Habitación" onAction="#showAddRoomDialog"/>
        <Button text="Editar" onAction="#handleEditRoom"/>
        <Button text="Eliminar" onAction="#handleDeleteRoom"/>
    </HBox>
</VBox>