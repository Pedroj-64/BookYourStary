<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.bookyourstary.viewController.OfferViewController" spacing="15">

    <TableView fx:id="offersTable">
        <columns>
            <TableColumn text="Alojamiento"/>
            <TableColumn text="Tipo de Oferta"/>
            <TableColumn text="Descuento"/>
            <TableColumn text="Fechas"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Nueva Oferta" onAction="#showCreateOfferDialog"/>
        <Button text="Editar" onAction="#handleEditOffer"/>
        <Button text="Eliminar" onAction="#handleDeleteOffer"/>
    </HBox>
</VBox>